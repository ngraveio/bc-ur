{
  "compilerOptions": {
    "resolveJsonModule": true,    
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,    
    "emitDecoratorMetadata": true,    
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",    
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/cbor2/lib"],
    "baseUrl": "./",
    "paths": {
      "cbor2": ["./node_modules/cbor2/lib/index.d.ts"],
      "cbor2/*": ["./node_modules/cbor2/lib/*"]
    }    
  },
  "paths": {
    "*": [
      "node_modules/*",
      "@types/*"
    ]
  },
  "references": [],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/"
  ]
}